.o-proexhibit
  %header.o-proexhibit__header
    %h2.o-proexhibit__headerimage
      = link_to root_path do
        = image_tag( '/images/fmarket_logo_red.svg',  class: 'o-proexhibit__headerimg' )
  .o-proexhibit__main
    %section.o-proexhibit__inner
      .o-proexhibit__title
        %h2.o-proexhibit__titlename
          商品の情報を入力
      .o-proexhibit__inner__form
      = form_for @product do |f|
        = f.fields_for :images do |i|
          .o-proexhibit__imageuploads
            %h3.o-proexhibit__imageuploads__title
              出品画像
            %p.o-proexhibit__imageuploads__text
              最大10枚までアップロードできます
            %label
              .o-proexhibit__imageuploads__file
                = i.file_field :url, type: 'file', class: "o-proexhibit__imageuploads__fileimage, o-hidden"
                %pre.o-proexhibit__imageuploads__filetext
                  ドラックアンドドロップ
                  またはクリックしてファイルをアップロード
          .o-proexhibit__productname
            .o-proexhibit__productname__formgroup
              %h3.o-proexhibit__productname__title
                商品名
              %span.o-proexhibit__required
                必須
              = f.text_field :name, class: "o-inputproductname", placeholder:'商品名（必須 40文字まで）'

            .o-proexhibit__productname__formgroup
              %h3.o-proexhibit__productname__title
                商品の説明
              %span.o-proexhibit__required
                必須
              = f.text_field :description, class: "o-inputproducttext", placeholder:'商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。'

          .o-proexhibit__explain
            %h3.o-proexhibit__explain__title
              商品の詳細
            .o-proexhibit__explain__formbox
              .o-proexhibit__explain__fformgroup
                %h3.o-proexhibit__productname__title
                  カテゴリー
                %span.o-proexhibit__required
                  必須
                .o-proexhibit__explain__from
                  %i.o-icon-bottom
                    = image_tag '/images/yazirushibottom.svg' ,class: 'icon-bottom'
                  %select.o-select
                    %option.value: ---
                    %option.value: レディース
                    %option.value: メンズ
                    %option.value: ベビー・キッズ
                    %option.value: インテリア・住まい・小物
                    %option.value: 本・音楽・ゲーム
                    %option.value: おもちゃ・ホビー・グッズ
                    %option.value: コスメ・香水・美容
                    %option.value: 家電・スマホ・カメラ
                    %option.value: スポーツ・レジャー
                    %option.value: ハンドメイド
                    %option.value: チケット
                    %option.value: 自動車・オートバイ
                    %option.value: その他
                  
              .o-proexhibit__explain__formgroup
                %h3.o-proexhibit__productname__title
                  商品の状態
                %span.o-proexhibit__required
                  必須
                .o-proexhibit__explain__from
                  %i.o-icon-bottom
                    = image_tag '/images/yazirushibottom.svg' ,class: 'icon-bottom'
                    =f.select :description, [["新品、未使用"], ["未使用に近い"],["目立った傷や汚れなし"], ["やや傷や汚れあり"], ["傷や汚れあり"], ["全体的に状態が悪い"]], include_blank: "---"
                  -# %select.o-select
                  -#   %option.value: ---
                  -#   %option{value: "1"} 新品、未使用
                  -#   %option{value: "2"} 未使用に近い
                  -#   %option{value: "3"} 目立った傷や汚れなし
                  -#   %option{value: "4"} やや傷や汚れあり
                  -#   %option{value: "5"} 傷や汚れあり
                  -#   %option{value: "6"} 全体的に状態が悪い

          .o-proexhibit__deivery
            %h3.o-proexhibit__deivery__title
              配送について
            .o-proexhibit__deivery__formbox
              .o-proexhibit__deivery__fformgroup
                %h3.o-proexhibit__productname__title
                  配送料の負担
                %span.o-proexhibit__required
                  必須
                .o-proexhibit__deivery__from
                  %i.o-icon-bottom
                    = image_tag '/images/yazirushibottom.svg' ,class: 'icon-bottom'
                    =f.select :shipping_charge, [["送料込み(出品者負担)"], ["着払い(購入者負担)"]], include_blank: "---"
                  -# %select.o-select
                  -#   %option.value: ---
                  -#   %option.value: 送料込み(出品者負担)
                  -#   %option.value: 着払い(購入者負担)

              .o-proexhibit__deivery__formgroup
                %h3.o-proexhibit__productname__title
                  発送元の地域
                %span.o-proexhibit__required
                  必須
                .o-proexhibit__deivery__from
                  %i.o-icon-bottom
                    = image_tag '/images/yazirushibottom.svg' ,class: 'icon-bottom'
                    =f.select :shipping_area, [["北海道"], ["青森県”],[“岩手"]], include_blank: "---"
                  -# %select.o-select
                  -#   %option.value: ---
                  -#   %option{value: "1"} 北海道
                  -#   %option{value: "2"} 青森県
                  -#   %option{value: "3"} 岩手県
                  -#   %option{value: "4"} 宮城県
                  -#   %option{value: "5"} 秋田県
                  -#   %option{value: "6"} 山形県
                  -#   %option{value: "7"} 福島県
                  -#   %option{value: "8"} 茨城県
                  -#   %option{value: "9"} 栃木県
                  -#   %option{value: "10"} 群馬県
                  -#   %option{value: "11"} 埼玉県
                  -#   %option{value: "12"} 千葉県
                  -#   %option{value: "13"} 東京都
                  -#   %option{value: "14"} 神奈川県
                  -#   %option{value: "15"} 新潟県
                  -#   %option{value: "16"} 富山県
                  -#   %option{value: "17"} 石川県
                  -#   %option{value: "18"} 福井県
                  -#   %option{value: "19"} 山梨県
                  -#   %option{value: "20"} 長野県
                  -#   %option{value: "21"} 岐阜県
                  -#   %option{value: "22"} 静岡県
                  -#   %option{value: "23"} 愛知県
                  -#   %option{value: "24"} 三重県
                  -#   %option{value: "25"} 滋賀県
                  -#   %option{value: "26"} 京都府
                  -#   %option{value: "27"} 大阪府
                  -#   %option{value: "28"} 兵庫県
                  -#   %option{value: "29"} 奈良県
                  -#   %option{value: "30"} 和歌山県
                  -#   %option{value: "31"} 鳥取県
                  -#   %option{value: "32"} 島根県
                  -#   %option{value: "33"} 岡山県
                  -#   %option{value: "34"} 広島県
                  -#   %option{value: "35"} 山口県
                  -#   %option{value: "36"} 徳島県
                  -#   %option{value: "37"} 香川県
                  -#   %option{value: "38"} 愛媛県
                  -#   %option{value: "39"} 高知県
                  -#   %option{value: "40"} 福岡県
                  -#   %option{value: "41"} 佐賀県
                  -#   %option{value: "42"} 長崎県
                  -#   %option{value: "43"} 熊本県
                  -#   %option{value: "44"} 大分県
                  -#   %option{value: "45"} 宮崎県
                  -#   %option{value: "46"} 鹿児島県
                  -#   %option{value: "47"} 沖縄県

              .o-proexhibit__deivery__formgroup
                %h3.o-proexhibit__productname__title
                  発送までの日数
                %span.o-proexhibit__required
                  必須
                .o-proexhibit__deivery__from
                  %i.o-icon-bottom
                    = image_tag '/images/yazirushibottom.svg' ,class: 'icon-bottom'
                    =f.select :shipping_date, [["1~2日で発送"], ["2~3日で発送"],["4~7日で発送"]], include_blank: "---"
                  -# %select.o-select
                  -#   %option.value: ---
                  -#   %option{value: "1"} 1~2日で発送
                  -#   %option{value: "2"} 2~3日で発送
                  -#   %option{value: "3"} 4~7日で発送

          .o-proexhibit__price
            %h3.o-proexhibit__price__title
              販売価格(300~9,999,999)
            %ul.o-proexhibit__price__formbox
              %li.o-proexhibit__price__formgroup
                %label.o-proexhibit__productnamee__title
                  価格
                  %span.o-proexhibit__required
                    必須
                %label.o-proexhibit__price__yen
                  ¥
                .o-proexhibit__price__from
                  = f.text_field :price, class: "o-priceselect", placeholder:'例）300'
                  -# %input.o-priceselect{placeholder:'例）300'}
              %li.o-fee
                .o-fee__left
                  販売手数料(10%)
                .o-fee__right
              %li.o-profit
                .o-profit__left
                  販売利益
                .o-profit__right
                  
          .o-proexhibit__btn
            .o-proexhibit__notes
              %p.o-proexhibit__note
                = link_to "禁止されている出品", root_path, class: "h-text-link"
                、
                = link_to "行為", root_path, class: "h-text-link"
                を必ずご確認ください。
              %p.o-proexhibit__note
                またブランド品でシリアルナンバー等がある場合はご記載ください。
                = link_to "偽ブランドの販売", root_path, class: "h-text-link"
                は犯罪であり処罰される可能性があります。
              %p.o-proexhibit__note
                また、出品をもちまして
                = link_to "加盟店規約", root_path, class: "h-text-link"
                に同意したことになります。
              = f.submit '出品する', class: 'o-proexhibit__linkred'
              -# %button.o-proexhibit__linkred
              -#   出品する
              = link_to root_path ,class: "o-proexhibit__return" do
                .o-proexhibit__linkgray
                  もどる
    
  = render "signup/signup-footer"
