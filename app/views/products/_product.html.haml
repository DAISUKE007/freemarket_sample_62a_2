.o-main
  .slick-container
    %div
      = image_tag "main.jpg",class: "o-main-photo"
    %div
      = image_tag "main2.jpg",class: "o-main-photo"
    %div
      = image_tag "main3.jpg",class: "o-main-photo"
      
  .o-category
    %h2.o-category__title
      人気のカテゴリー
    .o-category__list
      %ul.o-category__list__total
        %li.o-category__list__details
          レディース
        %li.o-category__list__details
          メンズ
        %li.o-category__list__details
          家電・スマホ・カメラ

  .o-contents 
    .o-contents__content
      .o-contents__content-main
        .o-contents__text
          %h3.o-contents__name
            レディース新着アイテム
        .o-contents__menu
          -@products.each do |product|
            -if  (product.category_id < 200)
              = link_to product_path(product) do
                %ul.o-contents__menu__items
                  %li.o-contents__menu__item
                    %figure.o-contents__menu__box
                      =image_tag product.images.last.image.url,class: "o-contents__menu__image" 
                      -if product.buyer_id.present?
                        .o-contents__menu__sold
                          .o-contents__menu__sold__inner SOLD
                      .span.o-price
                        ¥
                        =product.price.to_s(:delimited)
                      %figcaption.o-contents__menu__texts
                        %span.o-contents__menu__text
                          =product.name

    .o-contents__content
      .o-contents__content-main
