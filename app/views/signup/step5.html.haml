.h-user-body
  = render "signup/signup-header"
  .h-user-main
    .h-user-contents
      %h2.h-user-title
        支払い方法
      .h-user-content
        %form.h-user-form
          .h-user-form-box

            .h-form-group
              %label.h-label{for: "card_number"}
                カード番号
              %span.h-form-require
                必須
              %input.h-input-default{placeholder:'半角数字のみ', type: 'text', name: 'card_number'}
              .h-singnup-card-list
                = image_tag  "/images/cards.png", height: 21
            

            .h-form-group
              %label.h-label{for: "expiration_date"}
                有効期限
              %span.h-form-require
                必須
              %br
              .h-birthday-select-wrap
                .h-select-wrap-card
                  %i.h-icon-arrow-bottom

                  %select.h-select-default{name: "month"}
                    %option{value: "1"} 01
                    %option{value: "2"} 02
                    %option{value: "3"} 03
                    %option{value: "4"} 04
                    %option{value: "5"} 05
                    %option{value: "6"} 06
                    %option{value: "7"} 07
                    %option{value: "8"} 08
                    %option{value: "9"} 09
                    %option{value: "10"} 10
                    %option{value: "11"} 11
                    %option{value: "12"} 12
                %span 月

              .h-birthday-select-wrap
                .h-select-wrap-card
                  %i.h-icon-arrow-bottom

                  %select.h-select-default{name: "year"}
                    %option{value: "19"} 19
                    %option{value: "20"} 20
                    %option{value: "21"} 21
                    %option{value: "22"} 22
                    %option{value: "23"} 23
                    %option{value: "24"} 24
                    %option{value: "25"} 25
                    %option{value: "26"} 26
                    %option{value: "27"} 27
                    %option{value: "29"} 29
                %span 年
              %input{type: "hidden",name: "expiration_date", value: ""}

            .h-form-group
              %label.h-label{for: "security_code"}
                セキュリティーコード
              %span.h-form-require
                必須
              %input.h-input-default{placeholder:'カード背面4桁もしくは3桁の番号', type: 'text', name: 'security_code'}
            
            .h-text-right
              %p
                = link_to root_path, class: "h-text-link" do
                  カード裏面の番号とは？

            = link_to done_signup_index_path, class: "" do
              %button.h-btn-default.h-btn-red{type: "submit"}
                次へ進む

  = render "signup/signup-footer"