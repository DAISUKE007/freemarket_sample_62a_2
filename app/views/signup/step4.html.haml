            .h-form-group
              %label.h-label{for: "municipalities"}
                市区町村
              %span.h-form-require
                必須
              %input.h-input-default{placeholder: '例) 横浜市緑区', type: 'text', name: 'municipalities'}

            .h-form-group
              %label.h-label{for: "house_number"}
                番地
              %span.h-form-require
                必須
              %input.h-input-default{placeholder: '例) 青山1-1-1', type: 'text', name: 'house_number'}

            .h-form-group
              %label.h-label{for: "building_name"}
