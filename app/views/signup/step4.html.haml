.h-user-body
  = render "signup/signup-header"
  .h-user-main
    .h-user-contents
      %h2.h-user-title
        発送元・お届け先住所入力
      .h-user-content
        %form.h-user-form
          .h-user-form-box

            .h-form-group
              %label.h-label{for: "family_name_kanji"}
                お名前
              %span.h-form-require
                必須
              %input.h-input-default{placeholder:'例) 山田', type: 'text', name: 'family_name_kanji'}
              %input.h-input-default.h-form-password-revelation{placeholder: '例) 彩', type: 'text', name: 'family_name_kanji'}

            .h-form-group
              %label.h-label{for: "family_name_kana"}
                お名前カナ
              %span.h-form-require
                必須
              %input.h-input-default{placeholder:'例) ヤマダ', type: 'text', name: 'family_name_kana'}
              %input.h-input-default.h-form-password-revelation{placeholder: '例) アヤ', type: 'text', name: 'family_name_kana'}

            .h-form-group
              %label.h-label{for: "phone_number"}
                郵便番号
              %span.h-form-require
                必須
              %input.h-input-default{placeholder:'例) 123-4567', type: 'text', name: 'phone_number'}

            .h-form-group
              %label.h-label{for: "prefectures"}
                都道府県
              %span.h-form-require
                必須
              .h-select-wrap
                %i.h-icon-arrow-bottom

